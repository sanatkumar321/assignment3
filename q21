#include <iostream>
using namespace std;

int main() {
	float u,a;
	cin>>u;
	cout<<"enter the units="<<u;
	if(u<=50)
	{
		cout<<"total electricity bill="<<0.5*u<<endl;
	}
	else if(50<=u<=150)
	{
		a=(u-50)*0.75;
		cout<<"total electricity bill="<<a+25<<endl;
	}
	else if(150<=u<=250)
	{
		a=(u-150)*1.20;
		cout<<"total electricity bill="<<a+25+75<<endl;
	}
	else
	{
		a=(u-250)*1.50;
		cout<<"total electricity bill="<<a+25+75+120<<endl;
	}
	return 0;
}
